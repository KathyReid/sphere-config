{
  "mqtt": {
    "host": "localhost",
    "port": 1883,
    "config": {
      "keepalive": 10000
    }
  },
  "cloud": {
    "url": "ssl://dev.ninjasphere.co:8883",
    "activation": "https://api.dev.ninjasphere.co/rest/v1/node/%s/activate?local_ip=%s&board_type=%s",
    "allowSelfSigned": true
  },
  "enableCors": true,
  "director": {
    "port": 2224,
    "username": "go",
    "password": "forever",
    "pidfile": "director.pid",
    "logfile": "director.log",
    "errfile": "director.log",
    "paths": ["/opt/ninjablocks", "/opt/ninjablocks/drivers", "$GOPATH/src/github.com/ninjasphere"]
  },
  "led": {
    "panDuration": "350ms",
    "wakeTransition": "1ms",
    "sleepTransition": "5s",
    "sleepTimeout": "20s",
    "forceAllPanes": false,
    "gestures": {
      "enable": true,
      "log": false,
      "testPane": false
    },
    "clock": {
      "enabled": true,
      "alarmEnabled": true,
      "alarmFlashTimes": 2,
      "alarmFlashInterval": "500ms"
    },
    "media": {
      "volumeInterval": "Minimum delay before sending volume values to media devices",
      "volumeInterval": "500ms",

      "volumeModeReset": "How long after the last airwheel before we hide the volume display",
      "volumeModeReset": "1s",

      "airWheelReset": "Max time between airwheel values for them to be considered together",
      "airWheelReset": "300ms",

      "tapInterval": "Minimum delay between registered taps",
      "tapInterval": "100ms",

      "images": {
        "volume": "media-volume-speaker.gif",
        "mute": "media-volume-mute.png",
        "play": "media-play.png",
        "pause": "media-pause.png",
        "stop": "media-stop.png",
        "next": "media-next.png"
      }
    },
    "light": {
      "tapInterval": "Time before new taps are allowed.",
      "tapInterval": "150ms",

      "colorInterval": "Minimum delay before sending color state to media devices",
      "colorInterval": "400ms",

      "colorSpeed": "How fast the airwheel spins. Higher is faster",
      "colorSpeed": 0.19,

      "brightnessSpeed": "How fast the airwheel spins. Higher is faster",
      "brightnessSpeed": 1.1,

      "brightnessMinimum": "The lowest brightness to *render on the screen*. 0-255",
      "brightnessMinimum": 70
    },
    "onoff": {
      "tapTimeout": "100ms"
    },
    "weather": {
      "enabled": true,
      "updateInterval": "10m"
    },
    "certification": {
      "enabled": false
    },
    "gameOfLife": {
      "enabled": true
    }
  },
  "homecloud": {
    "rest": {
      "port": 8000
    },
    "websocket": {
      "port": 9001
    },
    "redis": {
      "port": 6379,
      "maxIdle": 3,
      "idleTimeout": "4m"
    },
    "autoStart": {
      "modules": [
        "app-scheduler",
        "driver-go-zigbee",
        "driver-go-hue",
        "driver-go-sonos",
        "driver-go-chromecast",
        "driver-go-blecombined",
        "driver-go-wemo",
        "driver-go-lifx",
        "driver-broadlink-demo"
      ],
      "interval": "7s"
    },
    "sync": {
      "enabled": true,
      "fromCloud": false,
      "interval": "15m",
      "timeout": "5s"
    }
  }
}
