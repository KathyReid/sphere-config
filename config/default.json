{
  "mqtt": {
    "host": "localhost",
    "port": 1883,
    "config": {
      "keepalive": 10000
    }
  },
  "cloud": {
    "url": "ssl://dev.ninjasphere.co:8883",
    "activation": "https://api.dev.ninjasphere.co/rest/v1/node/%s/activate?local_ip=%s&board_type=%s",
    "allowSelfSigned": true
  },
  "enableCors": true,
  "director": {
    "port": 2224,
    "username": "go",
    "password": "forever",
    "pidfile": "director.pid",
    "logfile": "director.log",
    "errfile": "director.log",
    "paths": ["/opt/ninjablocks", "/opt/ninjablocks/drivers", "$GOPATH/src/github.com/ninjasphere"]
  },
  "homecloud": {
    "rest": {
      "port": 8000
    },
    "websocket": {
      "port": 9001
    },
    "redis": {
      "port": 6379,
      "maxIdle": 3,
      "idleTimeout": "4m"
    },
    "autoStart": {
      "modules": [
        "app-scheduler",
        "driver-go-zigbee",
        "driver-go-hue",
        "driver-go-sonos",
        "driver-go-chromecast",
        "driver-go-blecombined",
        "driver-go-wemo",
        "driver-go-lifx"
      ],
      "interval": "20s"
    },
    "sync": {
      "interval": "15m",
      "timeout": "5s"
    }
  }
}
